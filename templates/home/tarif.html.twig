{% block body %}
<div class="bg-danger" style="margin-top:70px">
  <h1 class="text-white text-center p-4">Les tarifs</h1>
</div>
<div class="container">
  <p class="lead text-center">Voici une liste décrivant les tarifs de nos différents services</p>
  <ul class="list-group">
    {% for tarif in dataServiceTarif %}
    <li class="list-group-item d-flex justify-content-between align-items-center text-primary">
      <a href="{{path('service',{'slug':tarif.slug})}}">{{tarif.nom}}</a>
      <span class="badge badge-primary badge-pill">{{tarif.prix}} Fcfa</span>
    </li>
    {% endfor %}
  </ul>
</ul>
</div>

{{ include('partials/__footer.html.twig') }}
{% endblock %}
