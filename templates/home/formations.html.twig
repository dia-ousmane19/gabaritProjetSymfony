{% extends 'base.html.twig' %}
{% block title %}Formations - Sen physio group{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
<link href="https://fonts.googleapis.com/css2?family=Philosopher:ital@1&family=Roboto:wght@500&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Philosopher:ital@1&family=Roboto:wght@500&family=Vidaloka&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=PT+Sans&display=swap" rel="stylesheet">
<link rel="stylesheet" href="{{asset('css/home.css')}}">
{% endblock %}
{% block body %}
{{ include('partials/__header.html.twig') }}
<!-- banniere doctor -->
<div class="container bg-danger" data-aos="fade-in" data-aos-duration="3000" style="margin-top:70px">
  <h2 class="p-4 text-center text-white">Formations</h2>
</div>
<hr class="bg-danger w-25">
<!-- fin de la banniere -->
<!-- les informations du docteurs -->
<div class="container mt-4" >
  <div class="row">
    <!-- photo du docteur -->
    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5" data-aos="fade-right" data-aos-duration="3000">
      <img class="card-img-top w-100 img-fluid" height="377" src="{{asset('images/')}}{{dataForma.images}}" alt="Card image cap">
    </div>
    <!-- fin -->
    <!-- informations  -->
    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5" data-aos="fade-left" data-aos-duration="3000">
      <header>
        <h1 class="text-center">{{dataForma.titre}}</h1>
      </header>
      <div class="">
      <p class="lead text-justify">{{dataForma.description |raw}}</p>
      </div>
      <footer>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><i class="far fa-envelope"></i> <a href="{{path('contact')}}">contactez-nous</a></li>
        </ul>
      </footer>
    </div>
    <!-- fin -->

  </div>

</div>
<!-- fin -->
<hr class="bg-danger w-25">
<!-- les autres intervenants -->

<div class="container mt-4">
  <h3 class="text-center text-danger">Les autres formations</h3>
  <section class=" mt-4 pb-4 mb-4">
    <hr>
    <div class="card-deck">
      {% for otherformation in dataOtherForma %}
      <div class="card border-0" data-aos="fade-right" data-aos-duration="3000">
        <a href="{{path('formation',{'slug':otherformation.slug})}}" id="img_hover">  <img class="card-img-top img-fluid w-100" height="277" src="{{asset('images/')}}{{otherformation.images}}" alt="Card image cap"></a>
        <div class="card-body">
          <a href="{{path('formation',{'slug':otherformation.slug})}}"><h5 class="card-title text-danger">{{otherformation.titre}}</h5></a>
          <p class="card-text lead text-center">{{otherformation.description |raw |slice(0,100)}}[...]</p>
          <a href="{{path('formation',{'slug':otherformation.slug})}}" class="btn btn-sm btn-danger">Voir d√©tails</a>
        </div>
      </div>
      {% endfor %}
    </div>
  </section>

</div>
<!-- fin -->


{{ include('partials/__footer.html.twig') }}
{% endblock %}
